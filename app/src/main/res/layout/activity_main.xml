<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"/>
    <include layout="@layout/layout_homescore"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffeeee">
        <Button
            android:drawableTop="@mipmap/icon_rocket"
            android:text="手机加速"
            android:id="@+id/btn_rocket"
            style="@style/MainButton" />
        <Button
            android:drawableTop="@mipmap/icon_softmgr"
            android:text="软件管家"
            android:id="@+id/btn_sofemgr"
            style="@style/MainButton"/>
        <Button
            android:drawableTop="@mipmap/icon_phonemgr"
            android:text="手机检测"
            android:id="@+id/btn_phonemgr"
            style="@style/MainButton"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffeeee">
        <Button
            android:drawableTop="@mipmap/icon_telmgr"
            android:text="通讯大全"
            android:id="@+id/btn_telmgr"
            style="@style/MainButton"/>
        <Button
            android:drawableTop="@mipmap/icon_filemgr"
            android:text="文件管理"
            android:id="@+id/btn_filemgr"
            style="@style/MainButton" />
        <Button
            android:drawableTop="@mipmap/icon_sdclean"
            android:text="垃圾清理"
            android:id="@+id/btn_sdcclean"
            style="@style/MainButton"/>
    </LinearLayout>
</LinearLayout>
